  <!-- boostrap -->
  <%- include('./partials/boostrap') %>
    <title>Agregar Libros</title>
</head>
<header>
  <%- include('./partials/navbar.ejs') %>
</header>

<body>
  <div class="row no-gutters">
    <div class="col-3 col-md-2">
      <div class="cuadrado">
        <img src="/assets/IMG/ORGULLO-NEGRET.jpg" class="imagen">
      </div>
    </div>
    <div class="col flex space-x-4 " id="col">
      <article class="col-sm-6 col-md-8" id="medio">
        <section class="resena">
          <form action="sd" method="post">
            <label for="" class="texto1">
              <p class=" text-white ">Nombre del libro</p>
              <input type="text " placeholder="Type here"
                class="input input-bordered input-lg w-full max-w-xs text-white" required />
            </label>
            <label for="" class="texto1 pl-5 pt-5">
              <p class=" text-white ">Genero</p>
              <input type="text " placeholder="Type here"
                class="input input-bordered input-lg w-full max-w-xs text-white" required />
            </label>
          </form>
          <form action="sd" method="post">
            <label for="" class="texto1">
              <p class=" text-white ">Editorial</p>
              <input type="text " placeholder="Type here"
                class="input input-bordered input-lg w-full max-w-xs text-white" required />
            </label>
            <label for="" class="texto1 pl-5">
              <p class=" text-white ">AÃ±o de publicacion</p>
              <input type="text " placeholder="Type here"
                class="input input-bordered input-lg w-full max-w-xs text-white" required />
            </label>
          </form>
          <form action="ad" method="post">
            <label for="" class="texto1">
              <p class=" text-white ">Cantidad</p>
              <input type="number " placeholder="Type here"
                class="input input-bordered input-lg w-full max-w-xs text-white" required />
            </label>
            <label for="" class="texto1 pl-5">
              <p class=" text-white ">Autor</p>
              <input type="text " placeholder="Type here"
                class="input input-bordered input-lg w-full max-w-xs text-white" required />
            </label>
            <label for="" class="texto1 pr-6 pt-3">
              <p class=" text-white">Tiene continuacion</p>
              <p class="texto1 text-white ">Si<input type="checkbox" class="checkbox checkbox-accent pr-2" /></p>
            </label>
            <label for="" class="texto1 pt-3">
              <p class="texto1 text-white ">No<input type="checkbox" class="checkbox checkbox-accent pr-2" /></p>
            </label>
            <button class="btn btn-block btn-info pr-5"><a href="/">Guardar</a> </button>
            <button class="btn btn-block btn-info"><a href="/">Cancelar</a> </button>
          </form>

        </section>
      </article>
    </div>
  </div>

  <footer>
    <%- include('./partials/footer.ejs') %>
  </footer>
</body>

</html>